 

@using AIResumeScanner_Razden.Services
@inject TokenUsageService TokenUsageService
@implements IDisposable

<div class="token-usage-widget @(IsCompact ? "compact" : "")">
    <div class="widget-header">
        <span class="widget-title">⚡ Token Usage</span>
        @if (!IsCompact)
        {
            <a href="/token-history" class="btn btn-sm btn-link">View Full History</a>
        }
    </div>

    <div class="widget-body">
        <!-- Current Usage Meter -->
        <div class="token-meter">
            <div class="token-info">
                <span class="token-label">Last Minute:</span>
                <span class="token-value @GetStatusClass(tokensLastMinute, TokenUsageService.TokensPerMinuteLimit)">
                    @tokensLastMinute / @TokenUsageService.TokensPerMinuteLimit
                </span>
            </div>
            <div class="progress" style="height: 8px;">
                <div class="progress-bar @GetProgressBarClass(tokensLastMinute, TokenUsageService.TokensPerMinuteLimit)"
                     style="width: @GetPercentage(tokensLastMinute, TokenUsageService.TokensPerMinuteLimit)%">
                </div>
            </div>
        </div>

        @if (!IsCompact)
        {
            <!-- Summary Stats -->
            <div class="token-stats mt-2">
                <div class="stat-item">
                    <small class="text-muted">Today:</small>
                    <strong>@tokensToday.ToString("N0")</strong>
                </div>
                <div class="stat-item">
                    <small class="text-muted">Month:</small>
                    <strong>@tokensThisMonth.ToString("N0")</strong>
                </div>
                <div class="stat-item">
                    <small class="text-muted">Cost:</small>
                    <strong>$@estimatedCost.ToString("F2")</strong>
                </div>
            </div>

            <!-- Recent Requests -->
            <div class="recent-requests mt-3">
                <h6 class="mb-2">📝 Recent Requests</h6>
                <div class="request-list">
                    @if (recentRequests.Any())
                    {
                        @foreach (var request in recentRequests.Take(5))
                        {
                            <div class="request-item @(request.Success ? "" : "failed")"
                                 @onclick="() => ShowRequestDetail(request)"
                                 style="cursor: pointer;">
                                <div class="request-header">
                                    <span class="request-time">
                                        @request.Timestamp.ToLocalTime().ToString("HH:mm:ss")
                                    </span>
                                    <span class="request-tokens">
                                        @request.TotalTokens tokens
                                    </span>
                                </div>
                                <div class="request-details">
                                    <small class="text-muted">
                                        @request.Operation
                                    </small>
                                    @if (!request.Success)
                                    {
                                        <span class="badge bg-danger ms-2">Failed</span>
                                    }
                                </div>
                                <div class="request-breakdown">
                                    <small class="text-muted">
                                        ↑@request.PromptTokens ↓@request.CompletionTokens
                                        • @request.DurationSeconds.ToString("F1")s
                                        • $@request.EstimatedCost.ToString("F4")
                                    </small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted small mb-0">No recent requests</p>
                    }
                </div>
            </div>
        }

        @if (tokensLastMinute > TokenUsageService.TokensPerMinuteLimit * 0.8)
        {
            <div class="alert alert-warning alert-sm mt-2 mb-0" role="alert">
                <small>⚠️ Approaching rate limit!</small>
            </div>
        }
    </div>
</div>

<!-- Request Detail Modal -->
@if (selectedRequest != null)
{
    <TokenDetailModal IsVisible="showDetailModal"
                      Record="selectedRequest"
                      OnClose="CloseDetailModal" />
}

<style>
