        margin: 0.25rem 0 0 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .header-actions {
        display: flex;
        gap: 0.5rem;
        flex-shrink: 0;
    }

    .header-action-btn {
        width: 36px;
        height: 36px;
        border: none;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 8px;
        color: white;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        transition: all 0.2s ease;
    }

        .header-action-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: scale(1.05);
        }

    /* Modal Body */
    .url-modal-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        background: #f8f9fa;
    }

    .url-viewer-container {
        flex: 1;
        display: flex;
        background: white;
        position: relative;
        overflow: hidden;
    }

    .url-iframe {
        width: 100%;
        height: 100%;
        border: none;
        display: block;
    }

    /* Loading State */
    .url-loading-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        padding: 4rem 2rem;
    }

    .url-spinner {
        width: 60px;
        height: 60px;
        border: 5px solid rgba(102, 126, 234, 0.2);
        border-top-color: #667eea;
        border-radius: 50%;
        animation: urlSpin 1s linear infinite;
    }

    @@keyframes urlSpin {
        to {
            transform: rotate(360deg);
        }
    }

    .url-loading-container p {
        color: #666;
        font-size: 1rem;
        font-weight: 500;
        margin: 0;
    }

    /* Error State */
    .url-error-message {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 3rem 2rem;
        text-align: center;
    }

        .url-error-message i {
            font-size: 3rem;
            color: #f44336;
        }

        .url-error-message h4 {
            font-size: 1.25rem;
            color: #1a1a1a;
            margin: 0 0 0.5rem 0;
        }

        .url-error-message p {
            color: #666;
            margin: 0;
            font-size: 0.9375rem;
        }

    /* Modal Footer */
    .url-modal-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        background: white;
        border-top: 1px solid #e0e0e0;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .url-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex: 1;
        min-width: 0;
    }

        .url-info i {
            color: #667eea;
            font-size: 1rem;
            flex-shrink: 0;
        }

    .url-text {
        font-size: 0.8125rem;
        color: #666;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .url-footer-actions {
        display: flex;
        gap: 0.75rem;
        flex-shrink: 0;
    }

    .url-footer-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1.25rem;
        border: none;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        font-family: inherit;
        white-space: nowrap;
    }

        .url-footer-btn.primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

            .url-footer-btn.primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            }

        .url-footer-btn.secondary {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
        }

            .url-footer-btn.secondary:hover {
                background: #667eea;
                color: white;
                transform: translateY(-2px);
            }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .url-modal-container {
            width: 100vw !important;
            height: 100vh !important;
            max-width: 100vw !important;
            max-height: 100vh !important;
            border-radius: 0 !important;
        }

        .url-modal-header {
            padding: 1rem;
        }

        .url-modal-title {
            font-size: 1.125rem;
        }

        .url-modal-footer {
            flex-direction: column;
            align-items: stretch;
        }

        .url-info {
            justify-content: center;
        }

        .url-footer-actions {
            width: 100%;
        }

        .url-footer-btn {
            flex: 1;
            justify-content: center;
        }
    }
</style>

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback<bool> IsVisibleChanged { get; set; }

    [Parameter]
    public string Url { get; set; } = string.Empty;

    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Subtitle { get; set; } = string.Empty;

    [Parameter]
    public string IconClass { get; set; } = "fas fa-file-alt";

    [Parameter]
    public string Size { get; set; } = "large"; // small, medium, large, fullscreen

    [Parameter]
    public bool ShowFullscreenButton { get; set; } = true;

    [Inject]
    public IJSRuntime JSRuntime { get; set; }

    [Inject]
    public NotificationService NotificationService { get; set; }

    private bool IsLoading { get; set; } = false;
    private string ErrorMessage { get; set; } = string.Empty;
    private bool isFullscreen { get; set; } = false;
    private string popupUrl = string.Empty;

    protected override void OnParametersSet()
    {
        if (IsVisible && !string.IsNullOrEmpty(Url))
        {
            IsLoading = true;
            ErrorMessage = string.Empty;
            StateHasChanged();

            // Simulate loading (in real scenario, iframe onload would handle this)
            Task.Delay(500).ContinueWith(_ =>
            {
                IsLoading = false;
                InvokeAsync(StateHasChanged);
            });
        }
    }

    private async Task Close()
    {
        IsVisible = false;
        isFullscreen = false;
        await IsVisibleChanged.InvokeAsync(false);
    }

    private void ToggleFullscreen()
    {
        isFullscreen = !isFullscreen;
        StateHasChanged();
    }

    private string GetSizeClass()
    {
        if (isFullscreen) return "size-fullscreen";
        return $"size-{Size}";
    }

    private string GetIconClass()
    {
        if (!string.IsNullOrEmpty(IconClass))
            return IconClass;

        // Auto-detect icon based on URL
        var url = Url?.ToLower() ?? "";
        if (url.Contains(".pdf")) return "fas fa-file-pdf";
        if (url.Contains(".doc")) return "fas fa-file-word";
        if (url.Contains(".xls")) return "fas fa-file-excel";
        if (url.Contains(".jpg") || url.Contains(".png") || url.Contains(".gif")) return "fas fa-image";
        if (url.Contains("youtube.com") || url.Contains("vimeo.com")) return "fas fa-video";
        if (url.Contains("github.com")) return "fab fa-github";

        return "fas fa-file-alt";
    }

    private string GetShortUrl()
    {
        if (string.IsNullOrEmpty(Url))
            return "";

        try
        {
            var uri = new Uri(Url);
            var shortUrl = uri.Host + uri.PathAndQuery;
            return shortUrl.Length > 60 ? shortUrl.Substring(0, 57) + "..." : shortUrl;
        }
        catch
        {
            return Url.Length > 60 ? Url.Substring(0, 57) + "..." : Url;
        }
    }

    private async Task OpenInNewTab()
    {
        if (!string.IsNullOrEmpty(Url))
        {
            await JSRuntime.InvokeVoidAsync("open", Url, "_blank");
        }
    }

    private async Task CopyUrl()
    {
        if (!string.IsNullOrEmpty(Url))
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", Url);

                NotificationService?.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Success,
                    Summary = "Link Copied",
                    Detail = "URL copied to clipboard",
                    Duration = 2000
                });
            }
            catch
            {
                NotificationService?.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Warning,
                    Summary = "Copy Failed",
                    Detail = "Please copy the URL manually",
                    Duration = 2000
                });
            }
        }
    }
}
