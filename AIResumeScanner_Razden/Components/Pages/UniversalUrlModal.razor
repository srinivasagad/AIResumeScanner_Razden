@page "/UniversalUrlModal"

@if (IsVisible)
{
    <div class="url-modal-overlay @(IsVisible ? "show" : "")" @onclick="Close">
        <div class="url-modal-container @GetSizeClass()" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="url-modal-header">
                <div class="url-modal-title-section">
                    <div class="url-modal-icon">
                        <i class="@GetIconClass()"></i>
                    </div>
                    <div>
                        <h3 class="url-modal-title">@(Title ?? "Document Viewer")</h3>
                        <p class="url-modal-subtitle">@(Subtitle ?? Url)</p>
                    </div>
                </div>
                <div class="header-actions">
                    @if (ShowFullscreenButton)
                    {
                        <button class="header-action-btn" @onclick="ToggleFullscreen" title="@(isFullscreen ? "Exit Fullscreen" : "Fullscreen")">
                            <i class="fas @(isFullscreen ? "fa-compress" : "fa-expand")"></i>
                        </button>
                    }
                    <button class="header-action-btn" @onclick="Close" title="Close">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>

            <!-- Modal Body -->
            <div class="url-modal-body">
                @if (IsLoading)
                {
                    <div class="url-loading-container">
                        <div class="url-spinner"></div>
                        <p>Loading content...</p>
                    </div>
                }
                else if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="url-error-message">
                        <i class="fas fa-exclamation-triangle"></i>
                        <div>
                            <h4>Unable to Load Content</h4>
                            <p>@ErrorMessage</p>
                        </div>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Url))
                {
                    popupUrl = $"https://docs.google.com/gview?embedded=true&url={Uri.EscapeDataString(Url)}";
                    <div class="url-viewer-container">
                        <iframe src="@popupUrl"
                                class="url-iframe"
                                title="@Title"
                                sandbox="allow-same-origin allow-scripts allow-popups allow-forms"
                                loading="lazy" width="100%" height="600px"></iframe>
                       
                    </div>
                }
            </div>

            <!-- Modal Footer -->
            <div class="url-modal-footer">
                <div class="url-info">
                    <i class="fas fa-link"></i>
                    <span class="url-text" title="@Url">@GetShortUrl()</span>
                </div>
                <div class="url-footer-actions">
                    <button class="url-footer-btn secondary" @onclick="CopyUrl" title="Copy URL">
                        <i class="fas fa-copy"></i>
                        <span>Copy Link</span>
                    </button>
                    <button class="url-footer-btn primary" @onclick="OpenInNewTab" title="Open in New Tab">
                        <i class="fas fa-external-link-alt"></i>
                        <span>Open in New Tab</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
