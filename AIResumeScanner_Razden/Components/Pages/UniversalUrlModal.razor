    .url-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.75);
        backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        opacity: 0;
        animation: urlFadeIn 0.3s ease-out forwards;
        padding: 1rem;
    }

    @@keyframes urlFadeIn {
        to {
            opacity: 1;
        }
    }

    /* Modal Container */
