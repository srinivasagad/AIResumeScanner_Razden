            width: 600px;
            max-width: 90vw;
        }

        .url-modal-container.size-medium {
            width: 900px;
            max-width: 90vw;
        }

        .url-modal-container.size-large {
            width: 1200px;
            max-width: 95vw;
        }

        .url-modal-container.size-fullscreen {
            width: 100vw;
            height: 100vh;
            max-width: 100vw;
            max-height: 100vh;
            border-radius: 0;
        }

    @@keyframes urlSlideUp {
        from {
            transform: translateY(50px) scale(0.95);
            opacity: 0;
        }

        to {
            transform: translateY(0) scale(1);
            opacity: 1;
        }
    }

    /* Modal Header */
    .url-modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
